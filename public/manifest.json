{
  "manifest_version": 3,
  "name": "EasyDaddy",
  "version": "0.2.0",
  "description": "Universal web form autofill extension compatible with Chrome, Arc, Edge, and other browsers",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EasyDaddy - Universal Form Filler"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf-worker.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "minimum_chrome_version": "88",
  "homepage_url": "https://github.com/your-username/EasyDaddyExt"
}
